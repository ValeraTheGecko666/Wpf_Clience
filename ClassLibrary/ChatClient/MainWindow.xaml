<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Loaded="Window_Loaded" Closing="Window_Closing">
    <Grid>
        <Button x:Name="bConnDicon" Click="Button_Click" Content="Connect" HorizontalAlignment="Left" Height="35" VerticalAlignment="Top" Width="178" Margin="22,8,0,0"/>
        <TextBox x:Name="tbMessege" HorizontalAlignment="Center" Height="60" Margin="0,346,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="755" KeyDown="tbMessege_KeyDown"/>
        <TextBox x:Name="tbUserName" HorizontalAlignment="Left" Height="35" Margin="218,8,0,0" TextWrapping="Wrap" Text="Имя пльзователя" VerticalAlignment="Top" Width="560"/>
        <ListBox x:Name="lbChat" HorizontalAlignment="Center" Height="293" Margin="0,48,0,0" VerticalAlignment="Top" Width="756" d:ItemsSource="{d:SampleData ItemCount=5}"/>

    </Grid>
</Window>
